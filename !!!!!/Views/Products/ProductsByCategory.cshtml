@model Dictionary<_____.Models.Category, List<_____.Models.Product>>

@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@foreach (var category in Model)
{
    <h3 class="m-5 p-5" style="background-color: aqua;">@category.Key.CatName</h3>

    <div class="row w-25" >
        @foreach (var product in category.Value)
        {
            <div class="col-md-3 w-25"  >
                <div class="product-link" onclick="window.location.href='@Url.Action("DetailHome", "Products", new { id = product.ProID })'">
                    <img class="" style="width: 100%; height: 100%" src="@product.ProImg" alt="Product Image" /><br />
                    <p class="prod-name">@product.ProName</p>
                    <p class="prod-Price">@product.Price đ</p>
                    <button class="prod-Buy" style="border-radius: 0.5rem; width: 100%; background-color: orange;" onclick="window.location.href='@Url.Action("Details", "Products", new { id = product.ProID })'">Mua ngay</button>
                </div>
            </div>
        }
    </div>

    <hr />
}

<div>
    @Html.ActionLink("Back to All Products", "ProductsByCategory")
</div>