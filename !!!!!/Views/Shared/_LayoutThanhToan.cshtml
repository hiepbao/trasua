                        <img src="~/Content/Images/icons8-dollar-35.png" />
                        <div class="content-txt-42">
                            <a>Ví MoMo</a>
                        </div>
                        <input type="radio" name="PTTT" />
                    </div>
                </div>
            </div>
        </div>
        <div id="div-left"></div>
        @RenderBody()
    </div>
